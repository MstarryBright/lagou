<body id="login_bg">
	<div class="login_wrapper">
		<div class="login_header">
        	<a href="h/"><img src="__PUBLIC__/Home/style/images/logo_white.png" width="285" height="62" alt="拉勾招聘" /></a>
            <div id="cloud_s"><img src="__PUBLIC__/Home/style/images/cloud_s.png" width="81" height="52" alt="cloud" /></div>
            <div id="cloud_m"><img src="__PUBLIC__/Home/style/images/cloud_m.png" width="136" height="95"  alt="cloud" /></div>
        </div>
    	<input type="hidden" id="resubmitToken" value="" />		
		 <div class="login_box">
        	<form id="loginForm" method="post" action="{:U('loginOk')}">
        	    <!-- <ul class="register_radio clearfix">
        	    		            <li>
        	    		            	找工作就在这里登录，找人请先走旁边
        	    		              	<input type="radio" value="0" name="type" style="size:100px" />
        	    		            </li>
        	    		        </ul>  -->
				<input type="text" id="email" name="email" value="" tabindex="1" placeholder="请输入登录邮箱地址" />
			  	<input type="password" id="password" name="password" tabindex="2" placeholder="请输入密码" />
				<span class="error" style="display:none;" id="beError"></span>
				<span class="error" style="display:none;" id="emailerror">邮箱还没有注册啊</span>
			    <label class="fl" for="remember"><input type="checkbox" id="remember" value="" checked="checked"  /> 记住我</label>
			    <a href="reset.html" class="fr" target="_blank">忘记密码？</a>
				<input type="button" style="color:#fff;" href="" class="submitLogin" value="登 &nbsp; &nbsp; 录"/>
			</form>
			<div class="login_right">
				<a href="{:U('clogin')}">
				<input type="" style="color:#fcfcfc;"  class="submitLogin" value="公 司 登 录"/>
				</a>
				<div>还没有拉勾帐号？</div>
				<a  href="{:U('Register/adduser')}"  class="registor_now">立即注册</a>
			    <div class="login_others">使用以下帐号直接登录:</div>
			    <a  href="ologin/auth/sina.html"  target="_blank" class="icon_wb" title="使用新浪微博帐号登录"></a>
			    <a  href="ologin/auth/qq.html"  class="icon_qq" target="_blank" title="使用腾讯QQ帐号登录"></a>
			</div>
        </div>
        <div class="login_box_btm"></div>
    </div>

<script type="text/javascript">
$(function(){
	//验证表单
	 	$("#loginForm").validate({
	        rules: {
	    	   	email: {
	    	    	required: true,
	    	    	email: true
	    	   	},
	    	   	password: {
	    	    	required: true
	    	   	}
	    	},
	    	messages: {
	    	   	email: {
	    	    	required: "请输入登录邮箱地址",
	    	    	email: "请输入有效的邮箱地址，如：vivi@lagou.com"
	    	   	},
	    	   	password: {
	    	    	required: "请输入密码"
	    	   	}
	    	}
		});
		$('#email').on('blur',function() {
				var email =  $('#email').val();
			$.ajax({
				url: "{:U('loginajax')}",
				type: 'POST',
				dataType: 'json',
				data: {email: 'email'},
				success:function(json){
					if(json['emailOk'] == 'chacksuccess'){
						$('#emailerror').attr('sytle' , 'display:none');
					} else {
						$('#emailerror').attr('sytle' , '');
					}
				}
			});
		});
	$(".submitLogin").on('click',function(){
		$('form').submit();
	});
})
</script>
</body>
